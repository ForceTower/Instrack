<resources>
    <!-- Base application theme. -->
    <style name="Instrack" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="fontFamily">@font/product_sans_regular</item>
        <item name="secondaryBackground">@color/secondaryBackground</item>
        <item name="searchInsightBackground">@color/searchInsightBackground</item>
        <item name="searchInsightTextColor">@color/searchInsightTextColor</item>
    </style>

    <style name="Instrack.Home">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">@bool/not_on_night_mode</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>


    <style name="Instrack.Purchase">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">@bool/not_on_night_mode</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Instrack.Launcher">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">@bool/not_on_night_mode</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@drawable/launcher_screen</item>
    </style>

    <style name="Widget.Instrack.TextInputLayout.Login" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/login_input_stroke_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundColor">#19FFFFFF</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@android:color/white</item>
    </style>

    <style name="Widget.Instrack.MaterialButton.Login" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@android:color/white</item>
    </style>

    <style name="Widget.Instrack.NavigationView" parent="Widget.Design.NavigationView">
        <item name="listPreferredItemHeightSmall">60dp</item>
    </style>

    <style name="TextAppearance.Instrack.Toolbar" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="TextAppearance.Instrack.NavigationView.Home" parent="">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="TextAppearance.Instrack.TabLayout.Insights" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

</resources>